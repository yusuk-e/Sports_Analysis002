#!/bin/bash

#$6 絶対時間
#$6 絶対時間
#$5 チーム
#$7 選手
#$8 アクションID
#$9 ボールx
#$10 ボールy
#$11 成功or失敗

awk -F"," -v OFS=, '($8=="8" || $8=="9"){print $6}' 20151015_JPN-AUS.csv >> temp_time.csv

awk -F"," -v OFS=, '($8=="0" || $8=="1" || $8=="2" || $8=="3" || $8=="5" || $8=="7" || $8=="11" || $8=="12" || $8=="14"){print $6,$6,$5,$7,$8,$9,$10,$17}' 20151015_JPN-AUS.csv >> temp_meta.csv

#$8の詳細:
#0:2Pシュート
#1:3Pシュート
#2:ドリブル
#3:パス
#5:ファール
#7:ジャンプボール
#11:サイドプレイ
#12:エンドプレイ
#14:移動

cat temp_time.csv temp_meta.csv > processed_metadata.csv

rm temp*
